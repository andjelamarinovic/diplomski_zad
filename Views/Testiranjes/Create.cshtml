@model SportApp.Models.Testiranje

@{
    ViewData["Title"] = "Create";
}


<br>
<h4>Testiranje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p style="font-weight:bold;">
                    Ime i prezime ispitanika:
                    @ViewData["Student_Ime"]
                    @ViewData["Student_Prezime"]
                        </p>

            </div>
            <div class="form-group">
                <label asp-for="RazredId" class="control-label"></label>
                <select asp-for="RazredId" class ="form-control" asp-items="ViewBag.RazredId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DatumTest" class="control-label"></label>
                <input asp-for="DatumTest" class="form-control" />
                <span asp-validation-for="DatumTest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Povratak na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
