@model IEnumerable<SportApp.Models.Test>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TestRezultat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ocjena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Testiranje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VrstaTesta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Norma)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TestRezultat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ocjena)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Testiranje.TestiranjeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VrstaTesta.VrstaTestaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Norma.NormaId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TestId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TestId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TestId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/jquery-validation/jQueryFixes.js"></script>
}